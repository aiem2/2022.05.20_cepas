<h1>Wines</h1>
<br>
  <% if current_user.admin?%>
    <div class="btn btn-success"><%= link_to 'New Wine', new_wine_path, style: "color:white; text-decoration:none" %></div>
  <% end%>
<br>
<br>


<table class="table table-light table-stripped mr-5">
  <thead>
    <tr>
      <% if current_user.admin?%>
        <th scope="col">Id</th>
      <% end %>
      <th scope="col">Name</th>
      <th scope="col">Score</th>
      <th scope="col">Strains</th>
      <%if current_user.admin?%>
        <th scope="col">Details/Edit/Delete</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @wines.each do |wine|%>
    <tr>
        <% if current_user.admin?%>
          <td><%= wine.id %></td>
        <% end %>
        <td><%= wine.name %></td>
        <td><%= wine.score %></td>
        <td> <% wine.wine_strains.each do |wine_spec|%>
              <%= wine_spec.strain.name %> (<%= wine_spec.percentage %> %)
            <% end%></td>
        <% if current_user.admin?%>
          <td><%= link_to 'Show', wine%></td>
        <% end %>     
      </tr>
    <% end %>
  <tbody>
</table>
</div>



